

<h2>Description: <%= @listing.listing_description %></h2>
<br>
<h2>Address: <%= @listing.address %></h2>
<br>
<h2>Price: <%= @listing.price %></h2>
<br>
<h2>Features: <%= @listing.features %></h2>



<form action="/listings/<%= @listing.id %>/edit">
  <input type="submit" value="Update">
</form>

<br>

<form action="/listings/<%= @listing.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>
<br>
<br>
<% if @listing.user%>
  <h3>Agent: <%= @listing.user.name %></h3>           <!---#using the association -->
  <h3>Agent phone: <%= @listing.user.phone_number %></h3>
  <h3>Agent email: <%= @listing.user.email %> </h3>
<% else %>
  <p>no agent</p>
<% end %>