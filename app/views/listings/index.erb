<!---shows all the listings created ->

<h2>Listings</h2>   <!--- Using the association has many listings-->
<% @listings.each do |listing| %>
    <a href="/listings/<%=listing.id%>">
    <p><%= listing.listing_description %></p>
    <p><%= listing.address %></p>
    <p><%= listing.price %></p>
    <p><%= listing.features %></p>
    </a>
    <hr>
    <% if listing.user%>
        <p>Agent: <%= listing.user.name %></p>
        <p><%= listing.user.email %></p>
        <p><%= listing.user.phone_number %></p>
    <% end %>
    <hr>

<% end %>