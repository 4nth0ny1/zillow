    <title>Simple Zillow</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />

    <style>
      body {
        background: black;
      }

      .wrapper {
        background: white;
        color: black;
        text-align: center;
        border-radius: 50px;
      }

      .welcome-button {
        background: black;
        color: white;
        padding: 15px;
        font-size: 20px;
        border-radius: 50px;
      }

      .container {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        border-bottom: 2px solid lightgray;
      }

    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        <% if logged_in? %>
        <br>
          <a href="/signout">Logout</a> <!---try to add User Name here instead of Logout button -->
          <br>
          <br>
          <a href="/listings/new">Create a Listing</a>
          <br>
          <br>
          <a href="/listings">View All Listings</a>
        <% else %>
      
            <a href="/signin">Login</a>
            <br>
            <br>
                      <a href="/listings">View All Listings</a>

        <% end %>
      </div>

        <%= styled_flash %>
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>Simple Zillow</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
