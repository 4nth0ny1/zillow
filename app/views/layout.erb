  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Simple Zillow</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
      body {
        background: black;
      }

      .wrapper {
        background: white;
        color: black;
        text-align: center;
        border-radius: 50px;
      }

      .welcome-button {
        background: green;
        color: white;
        padding: 10px;
        font-size: 15px;
        border-radius: 50px;
      }

      .container {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        border-bottom: 2px solid lightgray;
        
      }

      .container a {
        text-decoration: none;
        color: black;
      }

         .container a:hover {
            color: green;
            font-weight: bold;
        }

        .tc-style {
          text-decoration: none;
          color: black;
        }

    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        <% if logged_in? %>
        <br>
          <a href="/signout">Logout</a> <!---try to add User Name here instead of Logout button -->
          <br>
          <br>
          <a href= "/users/<%= current_user.id %>">View Profile</a>  
          <br>
          <br>
          <a href="/listings/new">Create a Listing</a>
          <br>
          <br>
          <a href="/listings">View All Listings</a>
        <% else %>
            <a href="/signin">Login</a>
            <br>
            <br>
            <a href="/listings">View All Listings</a>
        <% end %>
      </div>

        <%= styled_flash %>
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>Simple Zillow</strong></small>
        <br>
                  <a href="/terms" class="tc-style">Terms & Conditions</a>

      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
